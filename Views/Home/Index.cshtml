@{
    ViewData["Title"] = "Home Page";
    var board = ViewData["Board"] as String[,];
    var boardSize = (int?) ViewData["Size"];
}

@model IEnumerable<MyWebApplication.Models.Cell>

<script src="~/lib/htmx/htmx.min.js"></script>


<div class="text-center">
    <h1 class="display-4">Learn, build, repeat &#128421;...</h1>
    <p></p>
    <div class="mainBoard">
        @for (int i = 0; i < boardSize; i++)
        {
            <div class="row">
                @for (int j = 0; j < boardSize; j++)
                {
                    <div onclick="clickCell(@i,@j)" id="cell_@i/@j" class="cell" style="background: @board?[i, j]"></div>
                    <!--<div hx-post="/Click/Cell?i=@i&j=@j" hx-swap="outerHTML" id="cell_@i/@j" class="cell" style="background: @board?[i, j]"></div>-->
                }
            </div>

        }
    </div>
    <div class="buttonContainer">
        <button class="btn btn-danger" hx-post="/Click/Reset" hx-target="body" class="btn btn-primary">Reset</button>
        <p>Socket state: <span id="stateLabel">Ready to connect...</span></p>
    </div>

</div>

<script src="~/js/home.js" asp-append-version="true"></script>
